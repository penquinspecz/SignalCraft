{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://signalcraft.dev/schemas/candidate_profile.schema.v1.json",
  "title": "SignalCraft Candidate Profile",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "candidate_id",
    "display_name",
    "target_roles",
    "preferred_locations",
    "constraints"
  ],
  "properties": {
    "schema_version": {
      "const": 1
    },
    "candidate_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]{1,64}$"
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "target_roles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "preferred_locations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "allow_remote",
        "max_commute_minutes"
      ],
      "properties": {
        "allow_remote": {
          "type": "boolean"
        },
        "max_commute_minutes": {
          "type": "integer",
          "minimum": 0,
          "maximum": 600
        }
      }
    },
    "text_inputs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "resume_text": {
          "type": "string",
          "maxLength": 120000
        },
        "linkedin_text": {
          "type": "string",
          "maxLength": 120000
        },
        "summary_text": {
          "type": "string",
          "maxLength": 40000
        }
      }
    },
    "text_input_artifacts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "resume_text": {
          "$ref": "#/$defs/text_input_artifact_pointer"
        },
        "linkedin_text": {
          "$ref": "#/$defs/text_input_artifact_pointer"
        },
        "summary_text": {
          "$ref": "#/$defs/text_input_artifact_pointer"
        }
      }
    },
    "resume_structured": {
      "$ref": "#/$defs/resume_structured"
    },
    "resume_structured_artifact": {
      "$ref": "#/$defs/resume_structured_artifact_pointer"
    }
  },
  "$defs": {
    "text_input_artifact_pointer": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "schema_version",
        "kind",
        "sha256",
        "size_bytes",
        "captured_at_utc",
        "artifact_path"
      ],
      "properties": {
        "schema_version": {
          "const": 1
        },
        "kind": {
          "enum": [
            "resume_text",
            "linkedin_text",
            "summary_text"
          ]
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "size_bytes": {
          "type": "integer",
          "minimum": 1
        },
        "captured_at_utc": {
          "type": "string",
          "minLength": 1
        },
        "artifact_path": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "resume_structured": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "resume_schema_version",
        "candidate_id",
        "source_format",
        "hash_version",
        "parser_version",
        "resume_hash",
        "skills",
        "role_signals",
        "experience_summary",
        "education_signals",
        "certification_signals"
      ],
      "properties": {
        "resume_schema_version": {
          "const": 1
        },
        "candidate_id": {
          "type": "string",
          "pattern": "^[a-z0-9_]{1,64}$"
        },
        "source_format": {
          "enum": [
            "pdf",
            "text"
          ]
        },
        "hash_version": {
          "const": "resume_hash.v1"
        },
        "parser_version": {
          "const": "resume_parser.v1"
        },
        "resume_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "role_signals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "experience_summary": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "years_experience_estimate",
            "seniority_signal"
          ],
          "properties": {
            "years_experience_estimate": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": 0,
              "maximum": 80
            },
            "seniority_signal": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "education_signals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "certification_signals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "resume_structured_artifact_pointer": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "schema_version",
        "resume_hash",
        "source_format",
        "artifact_path",
        "sha256",
        "size_bytes"
      ],
      "properties": {
        "schema_version": {
          "const": 1
        },
        "resume_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "source_format": {
          "enum": [
            "pdf",
            "text"
          ]
        },
        "artifact_path": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "size_bytes": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
